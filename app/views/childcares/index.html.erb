  <%# FURIMAが選ばれる3つの理由部分 %>
  
    <div style="display: flex; justify-content: center;">
      <h2 class="title" style="font-size: 50px;">イベント詳細</h2>
    </div>

     <%# 追加内容 %>
    <div class='item-contents'>
    <h2 class='title'>イベント一覧</h2>
    <div class="subtitle" >
      イベント場所と詳細
    </div>
    <ul class='item-lists'>

     <% @events.each do |event| %>
      <li class="card" style="width: 18rem; margin: 10px;">

      <div class='item-img-content'>
    <%= image_tag event.image.variant(resize:'500x500'), class: "item-img card-img-top" if event.image.attached? %>
      </div>
        <div class='item-info card-body'>
          <h5 class='card-title'>
            イベント名<br>
            <%= event.name %>
          </h5>
          <p class="card-text"><%= event.description%></p>
        </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">日付<br>
            <%= event.datetime %>
            </li>
            <li class="list-group-item">場所<br>
            <%= event.location %>
            </li>
            </ul>
          <%= link_to event_path(event.id),class: "btn btn-primary" do %>
            イベント詳細
             <% end %>
        </li>
      <% end %>


      <% if @events.empty?%>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            商品を出品してね！
          </h3>
          <div class='item-price'>
            <span>99999999円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>

       </ul>
  </div>
     <%# 追加内容 %>
     <div class='feature-contents'>
     <h2 class='title'>
      ママナビ紹介
    </h2>
    </div>
