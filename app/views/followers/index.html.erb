<%= render "shared/header" %>

<div class="items-sell-main">
  <h1 class="items-sell-title">フォローバックしていないアカウント</h1>
  <% unfollowed_followers = User.where.not(id: @user.followers.pluck(:id)).where.not(id: @user.id).order("RAND()").limit(5).to_a %>
  <% unfollowed_followers.shuffle.each do |user| %>
    <p class="f-user"><%= link_to user.nickname, user_path(user) %></p>
  <% end %>
</div>

<div class="items-sell-main">
<h1 class="items-sell-title">すべてのフォロワー</h1>
<% @followers.each do |user| %>
  <p class="f-user"><%= link_to user.nickname, user_path(user) %></p>
<% end %>
</div>


<%= render "shared/footer" %>